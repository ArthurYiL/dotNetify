<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HelloWorld;assembly=HelloWorld"
        Title="Hello World">

   <StackPanel>
      <TextBlock Text="{Binding Greetings}" />
      <TextBlock Text="{Binding ServerTime}" />
      <StackPanel Orientation="Horizontal">
         <TextBox Text="{Binding InputFirstName}" Width="200" />
         <TextBox Text="{Binding InputLastName}" Width="200" Margin="5,0,0,0" />
         <Button Command="{Binding InputAdd}">Add</Button>
      </StackPanel>
      <ListBox Items="{Binding Employees}">
         <ListBox.ItemTemplate>
            <DataTemplate>
               <StackPanel Orientation="Horizontal">
                  <TextBlock Text="{Binding FirstName}" />
                  <TextBlock Text="{Binding LastName}" Margin="5,0,0,0" />
               </StackPanel>
            </DataTemplate>
         </ListBox.ItemTemplate>
      </ListBox>
   </StackPanel>
</Window>