@page "/realtimepush"

<d-tab>
    <d-tab-item label="Output">
        <VMContext VM="RealTimePush" OnStateChanged="@HandleStateChanged">
            <div>
                <p>@state?.Greetings</p>
                <p>Server time is: @state?.ServerTime</p>
            </div>
        </VMContext>
    </d-tab-item>
</d-tab>

@functions {
    HelloWorldState state;

    class HelloWorldState
    {
        public string Greetings { get; set; }
        public string ServerTime { get; set; }
    }

    void HandleStateChanged(object newState)
    {
        state = newState.As<HelloWorldState>();
        StateHasChanged();
    }
}